<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#192E5B"
        app:layoutDescription="@xml/scene_activity_main"
        tools:ignore="contentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_movie_picture"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="?android:attr/windowBackground"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/image_view_movie_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_godzilla"
            app:layout_constraintBottom_toBottomOf="@id/constraint_layout_movie_picture"
            app:layout_constraintEnd_toEndOf="@id/constraint_layout_movie_picture"
            app:layout_constraintStart_toStartOf="@id/constraint_layout_movie_picture"
            app:layout_constraintTop_toTopOf="@id/constraint_layout_movie_picture"/>

    <TextView
            android:autoLink="all"
            android:textColor="#F2A104"
            android:gravity="center"
            android:id="@+id/text_view_title"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@id/constraint_layout_movie_picture"
            app:layout_constraintEnd_toEndOf="@id/constraint_layout_movie_picture"
            app:layout_constraintStart_toStartOf="@id/constraint_layout_movie_picture"
            android:textSize="26dp"
            android:textStyle="bold"
            android:text="哥吉拉II怪獸之王"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_view_close"
            app:layout_constraintEnd_toEndOf="@id/constraint_layout_movie_picture"
            app:layout_constraintTop_toTopOf="@id/constraint_layout_movie_picture"
            app:layout_constraintBottom_toTopOf="@id/constraint_layout_movie_picture"
            android:src="@drawable/icon_close"
            app:layout_constraintDimensionRatio="90:90"
            android:layout_width="30dp"
            android:layout_height="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_introduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>

    <TextView
            android:textColor="#00743F"
            android:gravity="center"
            android:id="@+id/text_view_introduction"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout_introduction"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout_introduction"
            app:layout_constraintEnd_toEndOf="@id/constraintLayout_introduction"
            app:layout_constraintStart_toStartOf="@id/constraintLayout_introduction"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="由米莉芭比布朗飾演的麥蒂森羅素試圖透過無線電聯絡生還者做開端，但是在多頭巨獸的瘋狂肆虐下，無線電的另一頭只傳來更多的災情，許多城市似乎已經被破壞殆盡，專家們相信這些巨大的怪獸只是冰山一角，怪獸們早已遍佈世界各地，隨時準備爭奪霸權..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#72A2C0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_view_menu"/>
</androidx.constraintlayout.motion.widget.MotionLayout>